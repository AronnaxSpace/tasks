<div class="flex mb-4 gap-x-3">
  <% if policy(project).edit? %>
    <%= link_to t(".edit_project"),
                edit_project_path,
                class: "btn btn-primary",
                data: { turbo_frame: "modal_content", action: "modal#open" } %>
  <% end %>

  <% if policy(project).destroy? %>
    <%= button_to t(".destroy_project"),
                  project_path,
                  method: :delete,
                  class: "btn btn-danger",
                  data: { turbo_confirm: t("are_you_sure") } %>
  <% end %>
</div>

<%= render "project_info" %>
