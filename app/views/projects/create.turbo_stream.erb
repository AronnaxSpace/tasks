<% if project.persisted? %>
  <%= turbo_stream.replace "modal_toggle", partial: "shared/modal_toggle", locals: { checked: false } %>
  <%= turbo_stream.replace "modal", partial: "shared/modal" %>
  <%= turbo_stream.prepend "projects", partial: "projects/project", locals: { project: @project } %>
<% else %>
  <%= turbo_stream.replace "new-project-form", partial: "projects/form" %>
<% end %>
