<%
  link_css = "text-gray-700 hover:text-gray-900 transition duration-300 ease-in-out cursor-pointer"
%>

<header class="py-4 bg-white border-b h-14">
  <div class="px-3 m-auto flex justify-end items-center gap-x-2">
    <%= link_to notifications_index_path, class: link_css do %>
      <i class="fa-solid fa-bell h-6"></i>
    <% end %>
    <a class="<%= link_css %> lg:hidden" data-action="click->sidenav#toggle touch->sidenav#toggle">
      <i class="fa-solid fa-bars h-6"></i>
    </a>
  </div>
</header>
