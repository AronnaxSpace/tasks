<%= render @task %>

<div class="mt-2">
  <%= link_to t("actions.edit"), edit_task_path(@task), class: "link" %> |
  <%= link_to t("actions.back"), tasks_path, class: "link" %>

  <%= button_to t("actions.destroy"), @task, method: :delete, class: "btn btn-danger mt-2" %>
</div>

<div data-controller="eraser">
  <div data-controller="visibility">
    <%= render "new_performance_actions" %>
  </div>

  <%= turbo_frame_tag "new_task_performance_frame", data: { eraser_target: "erasable" } %>

  <div class="space-y-4">
    <div>
      <h3>Active task events</h3>
      <%= turbo_frame_tag "task_performances_frame", src: task_performances_path(@task, scope: :active) %>
    </div>
  </div>
</div>
