<%= render @task %>

<div class="mt-2">
  <%= link_to t("actions.edit"), edit_task_path(@task), class: "link" %> |
  <%= link_to t("actions.back"), tasks_path, class: "link" %>

  <%= button_to t("actions.destroy"), @task, method: :delete, class: "btn btn-danger mt-2" %>
</div>

<%= link_to "New Task event",
            new_task_event_path(@task),
            data: { turbo_frame: "new_task_event_frame" },
            class: "btn btn-primary" %>

<%= turbo_frame_tag "new_task_event_frame" %>

<%= turbo_frame_tag "task_events_frame", src: task_events_path(@task) %>
