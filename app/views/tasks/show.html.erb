<div class="grid grid-cols-4 gap-4">
  <div class="col-span-4 lg:col-span-1">
    <div class="card space-y-2">
      <div>
        <h5><%= Task.human_attribute_name(:title) %></h5>
        <p><%= @task.title %></p>
      </div>
      <% if @task.description.present? %>
        <div>
          <h5><%= Task.human_attribute_name(:description) %></h5>
          <p><%= @task.description %></p>
        </div>
      <% end %>
      <% if @task.task_set_id.present? %>
        <div>
          <h5><%= Task.human_attribute_name(:task_set) %></h5>
          <p><%= @task.task_set.title %></p>
        </div>
      <% end %>
      <% if @task.assignee_id.present? %>
        <div>
          <h5><%= Task.human_attribute_name(:assignee) %></h5>
          <p><%= @task.assignee.nickname %></p>
        </div>
      <% end %>
      <div class="flex gap-x-1">
        <%= link_to t("actions.edit"), edit_task_path(@task), class: "link" %> |
        <%= button_to t("actions.destroy"), @task, method: :delete, class: "link link-danger" %>
      </div>
    </div>
  </div>

  <div class="col-span-4 lg:col-span-3">
    <%= render "new_performance_actions" %>
    <%= turbo_frame_tag "task_performances_frame", src: task_performances_path(@task, scope: :active), class: "space-y-4" %>
  </div>
</div>
